@using System.Security.Claims
<!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center">

  <div class="d-flex align-items-center justify-content-between">
    <a class="logo d-flex align-items-center w-auto" href="/">Kutluay<span
        class="d-none d-lg-block color-b">Emlak</span> <span class="badge rounded-pill bg-dark">Admin</span></a>
    <i class="bi bi-list toggle-sidebar-btn"></i>
  </div><!-- End Logo -->

  <nav class="header-nav ms-auto">
    <ul class="d-flex align-items-center">

      <li class="nav-item dropdown pe-3">

        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
          <img src="@Url.Content($"{Context.User.Claims.FirstOrDefault(x=>x.Type == "ProfilePhotoPath")?.Value}")"
            alt="Profile" class="rounded-circle">
          <span class="d-none d-md-block dropdown-toggle ps-2">@Context.User.Claims.FirstOrDefault(x=>x.Type ==
            ClaimTypes.Name)?.Value</span>
        </a><!-- End Profile Iamge Icon -->

        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
          <li class="dropdown-header">
            <h6>@Context.User.Claims.FirstOrDefault(x=>x.Type == ClaimTypes.Name)?.Value</h6>
            <span>@Context.User.Claims.FirstOrDefault(x=>x.Type == ClaimTypes.Role)?.Value</span>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>

          <li>
            <a class="dropdown-item d-flex align-items-center" href="/admin/user">
              <i class="bi bi-person"></i>
              <span>My Profile</span>
            </a>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>

          <li>
            <a class="dropdown-item d-flex align-items-center" href="/admin/user#profile-edit">
              <i class="bi bi-gear"></i>
              <span>Account Settings</span>
            </a>
          </li>
          <li>
            <hr class="dropdown-divider">
          </li>

          <li>
            <a class="dropdown-item d-flex align-items-center" asp-controller="Auth" asp-action="Logout">
              <i class="bi bi-box-arrow-right"></i>
              <span>Sign Out</span>
            </a>
          </li>

        </ul><!-- End Profile Dropdown Items -->
      </li><!-- End Profile Nav -->

    </ul>
  </nav><!-- End Icons Navigation -->



</header><!-- End Header -->

<div class="container fixed-bottom d-inline-flex p-2 bd-highlight">
  @if (TempData["alertType"] != null)
  {
    <div class="alert alert-@TempData["alertType"] alert-dismissible " role="alert">
      <strong>@TempData["alertType"].ToString()?.ToUpper()</strong> - @TempData["alertMessage"]<button type="button"
      class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  }
</div>