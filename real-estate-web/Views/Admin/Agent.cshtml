@model IEnumerable<AgentVM>

@{
    ViewData["Title"] = "Admin - Agent";
}

@{
    await Html.RenderPartialAsync("~/Views/Admin/_Header.cshtml", null);
}

@{
    await Html.RenderPartialAsync("~/Views/Admin/_Sidebar.cshtml", null);
}

<main style="margin-top: 70px;margin-bottom: 70px;" id="main" class="main">
    <section class="section dashboard">
        <div class="container">
            <div class="row">
                <h3>Danışman Sayfası</h3>
            </div>
            <div class="row">
                <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Adı</th>
                        <th scope="col">Soyadı</th>
                        <th scope="col">Email</th>
                        <th scope="col">Cep Telefonu</th>
                        <th scope="col">Görevi</th>
                        <th scope="col">Favori</th>
                        <th scope="col">Edit/Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.MobileNumber</td>
                        <td>@item.JobTitleName</td>
                        <td>@item.IsFavoritUser</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                <a type="button" class="btn btn-warning" asp-action="AgentUpdate" asp-route-Id="@item.Id" >Edit</a>
                                <a type="button" class="btn btn-danger" asp-controller="Admin" asp-action="RemoveAgent" asp-route-Id="@item.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                    }
                    
                </tbody>
            </table>
            </div>
        </div>
    </section>

</main><!-- End #main -->


@{
    await Html.RenderPartialAsync("~/Views/Admin/_Footer.cshtml", null);
}
