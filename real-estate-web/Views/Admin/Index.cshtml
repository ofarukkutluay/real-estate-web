                                </div>
                                <div class="ps-3">
                                    <h6><a href="/admin/blog">@ViewBag.BlogCount</a></h6>

                                </div>
                            </div>

                        </div>
                    </div>

                </div><!-- End Customers Card -->
                <!-- Recent Sales -->
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">

                        <div class="card-body">
                            <h5 class="card-title">Son Girilen 5 İlan <span>| Tüm</span></h5>

                            <table class="table table-borderless datatable">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">İl/İlçe</th>
                                        <th scope="col">Başlık</th>
                                        <th scope="col">Tipi</th>
                                        <th scope="col">Durumu</th>
                                        <th scope="col">Fiyat</th>
                                        <th scope="col">Danışman</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row"><a href="@Url.Action("Index","Property",new { id = item.Id , title = item.Title.TitleToUrl()})">#@item.Id</a></th>
                                            <td>@item.Il / @item.Ilce</td>
                                            <td><a href="@Url.Action("Index","Property",new { id = item.Id , title = item.Title.TitleToUrl()})" class="text-primary">@item.Title</a></td>
                                            <td>@item.PropertyType</td>
                                            <td>@item.Status</td>
                                            <td>@item.Price.ToString("₺##,#")</td>
                                            <td>@item.Agent</td>
                                        </tr>
                                    }


                                </tbody>
                            </table>

                        </div>

                    </div>
                </div><!-- End Recent Sales -->



            </div>
        </div><!-- End Left side columns -->
