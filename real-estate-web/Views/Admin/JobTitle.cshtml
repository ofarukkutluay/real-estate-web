@model IEnumerable<JobTitle>

@{
    ViewData["Title"] = "Admin - İş Tanımı";
}

@{
    await Html.RenderPartialAsync("~/Views/Admin/_Header.cshtml", null);
}

@{
    await Html.RenderPartialAsync("~/Views/Admin/_Sidebar.cshtml", null);
}

<main style="margin-top: 70px;margin-bottom: 70px;" id="main" class="main">
    <section class="section dashboard">
        <div class="container">
            <div class="row">
                <div class="col-9">
                    <h3>İş Tanımları</h3>
                </div>
                <div class="col-1">
                    @{
                        await Html.RenderPartialAsync("~/Views/Admin/Modals/AddJobTitleModal.cshtml",new JobTitle());
                    }
                </div>
            </div>

            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tanım</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Edit/Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a type="button" class="btn btn-danger" asp-controller="Admin"
                                        asp-action="RemoveJobTitle" asp-route-Id="@item.Id">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </section>

</main><!-- End #main -->


@{
    await Html.RenderPartialAsync("~/Views/Admin/_Footer.cshtml", null);
}
