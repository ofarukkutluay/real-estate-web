@model About

@{
    ViewData["Title"] = "Admin - Hakkımızda";
}

@{
    await Html.RenderPartialAsync("~/Views/Admin/_Header.cshtml", null);
}

@{
    await Html.RenderPartialAsync("~/Views/Admin/_Sidebar.cshtml", null);
}

<main style="margin-top: 70px;margin-bottom: 70px;" id="main" class="main">
    <section class="section dashboard">
        <div class="container">
            <div class="row">
                <h3>Hakkımızda Sayfası</h3>
            </div>
            <div class="row">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Ayarlar</h5>
                        <form asp-action="UpdateAbout" method="post">
                            <input asp-for="Id" class="form-control" hidden >
                            <div class="row mb-3"> <label for="inputTitle" class="col-sm-2 col-form-label">Başlık</label>
                                <div class="col-sm-10"> <input type="text" asp-for="Title" class="form-control"></div>
                            </div>
                            <div class="row mb-3"> <label for="inputBodyTitle" class="col-sm-2 col-form-label">İçerik Başlığı</label>
                                <div class="col-sm-10"> <input type="text" asp-for="BodyTitle" class="form-control"></div>
                            </div>
                            <div class="row mb-3"> <label for="inputBodyContentA"
                                    class="col-sm-2 col-form-label">İçerik İlk Paragraf</label>
                                <div class="col-sm-10"><textarea asp-for="BodyContentA" class="form-control" style="height: 100px"></textarea>
                                </div>
                            </div>
                            <div class="row mb-3"> <label for="inputBodyContentB"
                                    class="col-sm-2 col-form-label">İçerik İkinci Paragraf</label>
                                <div class="col-sm-10"><textarea asp-for="BodyContentB" class="form-control" style="height: 100px"></textarea>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-10"> <button type="submit" class="btn btn-primary">Güncelle</button></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->


@{
    await Html.RenderPartialAsync("~/Views/Admin/_Footer.cshtml", null);
}
