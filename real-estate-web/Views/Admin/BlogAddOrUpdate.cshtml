@model BlogVM

@{
    ViewData["Title"] = "Admin - Blog Ekle/Güncelle";
}



<script type="text/javascript">
    $(function () {


           var quill = new Quill('#blog-quill', {
               placeholder: 'İçerik...',
               theme: 'snow'
           });

           var content = document.querySelector('input[name=content]');
           quill.root.innerHTML = content.value;

           var form = document.querySelector('form');
           form.onsubmit = function () {
               content.value = quill.root.innerHTML;
           };

    });


</script>


    <section class="section dashboard">
        <div class="container">
            <div class="row">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Blog Ekle/Güncelle</h5>
                        <form class="needs-validation" asp-action="AddUpdateBlog" asp-controller="Admin" method="post" enctype="multipart/form-data">
                            <input asp-for="Id" class="form-control" hidden />
                            <div class="row mb-3">

                                <label for="formBaseFile" class="col-sm-2 col-form-label">Baş Fotoğraf</label>
                                <div class="col-sm-10">
                                    <input asp-for="BasePhoto" class="form-control" type="file" id="formBaseFile">
                                </div>
                            </div>

                            <div class="row mb-3">

                                <label for="title" class="col-sm-2 col-form-label">Başlık</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Title" name="title" class="form-control"
                                           id="title" required>
                                    <div class="invalid-feedback">Lütfen Başlık giriniz!</div>
                                </div>
                            </div>

                            <div class="row mb-3">

                                <label for="subtitle" class="col-sm-2 col-form-label">Alt Başlık</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Subtitle" name="subtitle" class="form-control"
                                           id="subtitle" required>
                                    <div class="invalid-feedback">Lütfen subtitle giriniz!</div>
                                </div>
                            </div>

                            <div class="row mb-5">

                                <label for="content" class="col-sm-2 col-form-label">İçerik</label>
                                <div class="col-sm-10">
                                    <input asp-for="Content" class="form-control"
                                           name="content" id="content" hidden>

                                    <div class="quill-editor-default" id="blog-quill"></div>

                                </div>
                            </div>

                            <div class="row mb-3">

                                <label for="category" class="col-sm-2 col-form-label">Kategori</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Category" name="category" class="form-control"
                                           id="category" required>

                                </div>
                            </div>

                            <div class="row mb-3">

                                <label for="author" class="col-sm-2 col-form-label">Yazar</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Author" name="author" class="form-control"
                                           id="author" required>
                                    <div class="invalid-feedback">Lütfen author giriniz!</div>
                                </div>
                            </div>

                            <div class="row mb-3">

                                <label for="date" class="col-sm-2 col-form-label">Tarih</label>
                                <div class="col-sm-10">
                                    <input type="date" asp-for="Date" name="date" class="form-control"
                                           id="date" required>
                                    <div class="invalid-feedback">Lütfen date giriniz!</div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-12">
                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-primary">Ekle</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


